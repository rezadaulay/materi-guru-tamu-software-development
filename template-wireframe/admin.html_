<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Wireframe - Sisi Restoran (Low Fidelity)</title>
  <style>
    body{font-family:Arial,Helvetica,sans-serif;margin:0;padding:20px;color:#111;background:#fff}
    .frame{max-width:900px;margin:0 auto}
    header{display:flex;align-items:center;justify-content:space-between;border-bottom:2px solid #333;padding-bottom:10px}
    .logo{border:2px dashed #333;padding:10px 16px;font-weight:bold}
    .card{border:2px solid #333;padding:16px;margin:12px 0}
    .row{display:flex;gap:12px}
    .col{flex:1}
    table{width:100%;border-collapse:collapse;margin-top:10px}
    th,td{border:1px dashed #999;padding:6px;text-align:left}
    button{padding:6px 10px;border:2px solid #333;background:transparent;cursor:pointer}
    input[type=text],input[type=password]{width:97%;padding:8px;border:2px dashed #777}
    .hidden{display:none}
    .center{text-align:center}
    .ghost{border:2px dashed #777;padding:10px;text-align:center}
    .small{font-size:13px;color:#555}
  </style>
</head>
<body>
  <div class="frame">
    <header>
      <div class="logo">DASHBOARD MIE JAGOAN</div>
      <div class="small">Wireframe Low-Fidelity</div>
    </header>

    <!-- LOGIN PAGE -->
    <section id="login" class="card">
      <h2>Login</h2>
      <label>Username</label>
      <input id="user" type="text" placeholder="Masukkan username" />
      <label>Password</label>
      <input id="pass" type="password" placeholder="Masukkan password" />
      <div class="center" style="margin-top:12px"><button onclick="go('orders')">Masuk</button></div>
    </section>

    <!-- ORDER LIST PAGE -->
    <section id="orders" class="card hidden">
      <h2>Pesanan Masuk</h2>
      <table>
        <thead>
          <tr><th>No Meja</th><th>Menu</th><th>Total</th><th>Status</th><th>Aksi</th></tr>
        </thead>
        <tbody id="orderList"></tbody>
      </table>
      <div style="margin-top:12px" class="center">
        <button onclick="go('history')">Lihat Riwayat</button>
      </div>
    </section>

    <!-- ORDER DETAIL PAGE -->
    <section id="detail" class="card hidden">
      <h2>Detail Pesanan</h2>
      <div id="detailInfo" class="small"></div>
      <div style="margin-top:12px" class="row">
        <div class="col"><button onclick="updateStatus('diproses')">Mulai Proses</button></div>
        <div class="col center"><button onclick="updateStatus('selesai')">Selesai</button></div>
        <div class="col center"><button onclick="go('orders')">Kembali</button></div>
      </div>
    </section>

    <!-- DELIVERY PAGE -->
    <section id="delivery" class="card hidden">
      <h2>Pengantaran</h2>
      <div id="deliveryInfo" class="ghost"></div>
      <div class="center" style="margin-top:12px"><button onclick="markDelivered()">Sudah Diantar</button></div>
    </section>

    <!-- HISTORY PAGE -->
    <section id="history" class="card hidden">
      <h2>Riwayat Pesanan</h2>
      <table>
        <thead>
          <tr><th>No Meja</th><th>Menu</th><th>Waktu</th><th>Status</th></tr>
        </thead>
        <tbody id="historyList"></tbody>
      </table>
      <div style="margin-top:12px" class="center"><button onclick="go('orders')">Kembali</button></div>
    </section>

    <footer class="small center" style="margin-top:18px">(Wireframe sederhana - sisi restoran)</footer>
  </div>

  <script>
    const pages=['login','orders','detail','delivery','history'];
    const orders=[
      {id:1,meja:'01',menu:'Nasi Goreng, Es Teh',total:23000,status:'Baru'},
      {id:2,meja:'02',menu:'Mie Ayam, Air Mineral',total:17000,status:'Baru'},
    ];
    const history=[];

    function go(p){ pages.forEach(id=>document.getElementById(id).classList.add('hidden')); document.getElementById(p).classList.remove('hidden'); if(p==='orders') renderOrders(); if(p==='history') renderHistory(); }

    function renderOrders(){ const list=document.getElementById('orderList'); list.innerHTML=''; orders.forEach(o=>{
      const tr=document.createElement('tr'); tr.innerHTML=`<td>${o.meja}</td><td>${o.menu}</td><td>Rp ${o.total}</td><td>${o.status}</td><td><button onclick=\"viewDetail(${o.id})\">Proses</button></td>`; list.appendChild(tr);
    }); }

    function viewDetail(id){ const o=orders.find(x=>x.id===id); state.current=o; document.getElementById('detailInfo').innerHTML=`<div><strong>No Meja:</strong> ${o.meja}</div><div>Menu: ${o.menu}</div><div>Total: Rp ${o.total}</div><div>Status: ${o.status}</div>`; go('detail'); }

    function updateStatus(status){ if(!state.current) return; state.current.status=status==='diproses'?'Diproses':'Selesai'; if(status==='selesai'){ go('delivery'); document.getElementById('deliveryInfo').innerText=`Pesanan meja ${state.current.meja} siap diantar.`; } else go('orders'); renderOrders(); }

    function markDelivered(){ if(!state.current) return; history.push({...state.current,waktu:new Date().toLocaleTimeString()}); const index=orders.indexOf(state.current); if(index>-1) orders.splice(index,1); state.current=null; go('orders'); renderOrders(); }

    function renderHistory(){ const list=document.getElementById('historyList'); list.innerHTML=''; history.forEach(h=>{ const tr=document.createElement('tr'); tr.innerHTML=`<td>${h.meja}</td><td>${h.menu}</td><td>${h.waktu}</td><td>${h.status}</td>`; list.appendChild(tr); }); }

    const state={current:null};
    go('login');
  </script>
</body>
</html>
